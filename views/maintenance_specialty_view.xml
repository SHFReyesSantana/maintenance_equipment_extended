<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="maintenance_specialty_view_tree">
            <field name="name">Maintenance Specialty List</field>
            <field name="model">maintenance.specialty</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="maintenance_specialty_view_form">
            <field name="name">Maintenance Specialty Form</field>
            <field name="model">maintenance.specialty</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </form>
            </field>
        </record>

        <record model='ir.actions.act_window' id='maintenance_specialty_action'>
            <field name="name">Maintenance Specialty</field>
            <field name="res_model">maintenance.specialty</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="maintenance_speciality"
                  parent="maintenance.menu_maintenance_configuration"
                  sequence="40"
                  action="maintenance_specialty_action"/>
    </data>
</odoo>